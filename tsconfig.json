{
    "compilerOptions": {
      "target": "ESNext",                   // Use modern JS features
      "module": "CommonJS",                 // Module system
      "lib": ["ESNext", "DOM"],             // Add Promise, async/await, and browser APIs
      "strict": true,                       // Enable strict type checking
      "esModuleInterop": true,              // Allow default imports from CommonJS modules
      "moduleResolution": "node",           // Node-style module resolution
      "resolveJsonModule": true,            // Allow importing JSON files
      "skipLibCheck": true,                 // Skip checking type definitions of dependencies
      "forceConsistentCasingInFileNames": true // Prevent file name casing mismatches
    },
    "include": ["tests/**/*.ts"],            // Include all test files
    "exclude": ["node_modules"]              // Exclude dependencies
  }
  